<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.randall.assistant.ui.EditAssetActivityFragment"
    tools:showIn="@layout/activity_edit_asset">

    <EditText
        android:id="@+id/field_edit_asset_assetnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/asset_assetnumber" />

    <EditText
        android:id="@+id/field_edit_asset_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/asset_model" />

    <EditText
        android:id="@+id/field_edit_asset_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/asset_brand" />

    <EditText
        android:id="@+id/field_edit_asset_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/asset_description" />

    <EditText
        android:id="@+id/field_edit_asset_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/asset_location" />

    <EditText
        android:id="@+id/field_edit_asset_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/asset_note" />

    <Spinner
        android:id="@+id/spinner_edit_asset_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinner_edit_asset_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
